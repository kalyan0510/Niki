<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear"
        android:weightSum="1">

        <com.gkalyan0510.root.nikiandroid.RoundedImageView
            android:layout_width="55dp"
            android:src="@mipmap/ic_launcher"
            android:layout_height="55dp"
            android:id="@+id/recent_item_imagecc"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Name"
                android:id="@+id/getnamecc" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.8"

                    android:textColor="#0044ff"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="7024510641"
                    android:id="@+id/getphonecc" />


            </LinearLayout>
            <TextView
                android:layout_marginLeft="5dp"
                android:paddingLeft="15dp"
                android:layout_width="fill_parent"

                android:textColor="#444444"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="gkalyan0510@gmal.com"
                android:id="@+id/getemailcc" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>